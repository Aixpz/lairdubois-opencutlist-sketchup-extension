{% extends 'core/_modal.twig' %}

{% set id = 'ladb_materials_modal_new' %}
{% set title = 'tab.materials.new_material.title'|i18next %}

{% block headerInner %}
    {{ parent() }}
{% endblock %}

{% block bodyInner %}
    <div class="form form-horizontal">
        <div class="form-group">
            <label for="ladb_materials_input_name" class="control-label col-xs-4">{{ 'tab.materials.new_material.name'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_materials_input_name" value="{{ material.name }}">
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_materials_input_color" class="control-label col-xs-4">{{ 'tab.materials.new_material.color'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_materials_input_color">
            </div>
        </div>
    </div>
    <div class="text-center">
        <div class="color-picker"></div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button type="button" class="btn btn-primary" id="ladb_materials_create" disabled>{{ 'default.create'|i18next }}...</button>
{% endblock %}