{% extends 'tabs/base-slide.twig' %}

{% set id = 'ladb_cutlist_slide_cuttingdiagram_1d' %}
{% set out = true %}

{% set barDimensionFontSize = 16 %}
{% set dimensionFontSize = 12 %}
{% set numberFontSize = 26 %}

{% set dimensionOffset = 5 %}
{% set barDimensionOffset = 10 %}

{% set barOutlineWidth = 1 %}
{% set partOutlineWidth = 2 %}
{% set cutOutlineWidth = 2 %}
{% set edgeWidth = 3 %}

{% block headerInner %}
    {{ parent() }}
    <ul class="ladb-file-tabs nav nav-tabs">
        {% include 'tabs/cutlist/_file-tab.twig' with { 'generatedAt':'000' } %}
    </ul>
{% endblock %}

{% block headerHeadingInner %}
    {{ 'tab.cutlist.cuttingdiagram.title'|i18next}} <small>| {{ group.material_name }} / <strong>{{ group.std_dimension}}</strong></small>
{% endblock %}

{% block headerToolsInner %}
    <button id="ladb_btn_cuttingdiagram" class="btn btn-primary"><i class="ladb-opencutlist-icon-refresh"></i> {{ 'tab.cutlist.menu.group_cuttingdiagram'|i18next }}...</button>
    <button id="ladb_btn_print" class="btn btn-default"><i class="ladb-opencutlist-icon-print"></i> {{ 'default.print'|i18next }}</button>
    <button id="ladb_btn_close" class="btn btn-default"><i class="ladb-opencutlist-icon-close"></i> {{ 'default.close'|i18next }}</button>
{% endblock %}

{% block containerInner %}
    {{ parent() }}
    <div class="ladb-page">

        {% include 'core/_alert-errors.twig' %}
        {% include 'core/_alert-warnings.twig' %}
        {% include 'core/_alert-tips.twig' %}

        {% if unplaced_parts|length > 0 %}
            {% set colspan = 7 %}
            {% if not showCuttingDimensions %}
                {% set colspan = colspan - 2 %}
            {% endif %}
            <table id="ladb_cuttingdiagram_unplaced_parts" data-group-id="cuttingdiagram_unplaced_parts" class="{% if 'cuttingdiagram_unplaced_parts' in generateOptions.hidden_group_ids %}no-print {% endif %}table table-bordered table-danger ladb-cutlist-group">
                <thead>
                <tr>
                    <td colspan="{{ colspan }}">
                        <button class="no-print btn btn-default btn-sm ladb-btn-toggle-no-print pull-left"><i class="ladb-opencutlist-icon-eye-close"></i></button>
                        <div class="ladb-heading text-danger"><i class="ladb-opencutlist-icon-warning"></i> {{ 'tab.cutlist.cuttingdiagram.list.unplaced_parts'|i18next }}</div>
                    </td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="text-center" rowspan="2" style="vertical-align: middle !important;" width="5%">{{ 'tab.cutlist.list.number'|i18next }}</td>
                    <td class="text-center" rowspan="2" style="vertical-align: middle !important;">{{ 'tab.cutlist.list.name'|i18next }}</td>
                    <td class="text-center" rowspan="2" style="vertical-align: middle !important;" width="5%">{{ 'tab.cutlist.list.count'|i18next }}</td>
                    {% if showCuttingDimensions %}
                        <td class="text-center" colspan="2">{{ 'tab.cutlist.list.cutting'|i18next }}</td>
                    {% endif %}
                    <td class="text-center" colspan="2">{{ 'tab.cutlist.list.bbox'|i18next }}</td>
                </tr>
                <tr>
                    {% if showCuttingDimensions %}
                        {% for property in dimensionColumnOrderStrategy if property != 'thickness' %}
                            <td class="text-center" width="8%">{{ ('tab.cutlist.list.'~property~'_short')|i18next }}</td>
                        {% endfor %}
                    {% endif %}
                    {% for property in dimensionColumnOrderStrategy if property != 'thickness' %}
                        <td class="text-center" width="8%">{{ ('tab.cutlist.list.'~property~'_short')|i18next }}</td>
                    {% endfor %}
                </tr>
                {% for part in unplaced_parts  %}
                    <tr class="ladb-cutlist-row ladb-minitools-holder" data-part-id="{{ part.id }}">
                        <td class="text-center">
                            {{ part.number }}
                        </td>
                        <td>
                            <div class="ladb-minitools ladb-minitools-right no-print">
                                <span class="ladb-separator"></span>
                                <a href="#" class="ladb-btn-highlight-part ladb-click-tool" data-toggle="tooltip" title="{{ 'tab.cutlist.tooltip.highlight_part'|i18next }}"><i class="ladb-opencutlist-icon-magnifier"></i></a>
                            </div>
                            {{ part.name|escape }}
                        </td>
                        <td class="text-center">
                            {{ part.count }}
                        </td>
                        {% if showCuttingDimensions %}
                            {% for property in dimensionColumnOrderStrategy if property != 'thickness' %}
                                {% include 'tabs/cutlist/_list-row-cutting-dimension.twig' %}
                            {% endfor %}
                        {% endif %}
                        {% for property in dimensionColumnOrderStrategy if property != 'thickness' %}
                            <td class="ladb-cutlist-dimension-value">{{ part[property] }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        {% if summary.bars is not empty  %}
            <table id="ladb_cuttingdiagram_summary" data-group-id="cuttingdiagram_summary" class="{% if 'cuttingdiagram_summary' in generateOptions.hidden_group_ids %}no-print {% endif %}table table-bordered ladb-cutlist-group ladb-cutlist-group-summary">
                <thead>
                <tr>
                    <td colspan="5">
                        <button class="no-print btn btn-default btn-sm ladb-btn-toggle-no-print pull-left"><i class="ladb-opencutlist-icon-eye-close"></i></button>
                        <div class="ladb-heading">{{ 'tab.cutlist.cuttingdiagram.list.summary'|i18next }}</div>
                    </td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td colspan="5">
                        <small>
                            <span style="margin-left: 10px;">{{ 'tab.cutlist.cuttingdiagram.list.settings'|i18next }}</span>
                            <div class="row">
                                <div class="col-xs-6">
                                    <ul>
                                        <li><strong>{{ 'tab.cutlist.cuttingdiagram.option_max_time'|i18next }} : </strong>{{ options.max_time }} {{ 'default.seconds'|i18next }}</li>
                                        <li><strong>{{ 'tab.cutlist.cuttingdiagram.option_tuning_level'|i18next }} : </strong>{{ ('tab.cutlist.cuttingdiagram.option_tuning_level_'~options.tuning_level)|i18next }}</li>
                                    </ul>
                                </div>
                                <div class="col-xs-6">
                                    <ul>
                                        <li><strong>{{ 'tab.cutlist.cuttingdiagram.option_saw_kerf'|i18next }} : </strong>{{ options.saw_kerf }}</li>
                                        <li><strong>{{ 'tab.cutlist.cuttingdiagram.option_trimming'|i18next }} : </strong>{{ options.trimming }}</li>
                                    </ul>
                                </div>
                            </div>
                        </small>
                    </td>
                </tr>
                <tr>
                    <td class="text-center" style="vertical-align: middle !important;">{{ 'tab.cutlist.cuttingdiagram.list.bar'|i18next }}</td>
                    <td class="text-center" style="vertical-align: middle !important;" width="5%">{{ 'tab.cutlist.cuttingdiagram.list.count'|i18next }}</td>
                    <td class="text-center" width="12%">{{ 'tab.cutlist.cuttingdiagram.list.length'|i18next }}</td>
                    <td class="text-center" width="12%">{{ 'tab.cutlist.cuttingdiagram.list.total_length'|i18next }}</td>
                </tr>
                {% for bar in summary.bars  %}
                    <tr class="ladb-cutlist-row"{% if not bar.is_used %} data-toggle="tooltip" data-placement="left" title="{{ 'tab.cutlist.cuttingdiagram.list.unused'|i18next }}" style="text-decoration: line-through;color: #888;"{% endif %}>
                        <td>
                            <i class="ladb-opencutlist-icon-bar"></i> {{ group.material_name }} / <strong>{{ group.std_dimension }}</strong> - {{ ('tab.cutlist.cuttingdiagram.list.bar_type_'~bar.type)|i18next }}
                            {% if bar.is_used %}
                                <div class="ladb-minitools ladb-minitools-right no-print">
                                    <a href="#ladb_cuttingdiagram_group_{{ bar.index }}" class="ladb-btn-scrollto ladb-click-tool"><i class="ladb-opencutlist-icon-arrow-circle-down"></i></a>
                                </div>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {{ bar.count }}
                        </td>
                        <td class="text-right">
                            {{ bar.length }}
                        </td>
                        <td class="text-right">
                            {{ bar.total_length }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        {% if options.hide_part_list %}
            {% set colspan = 1 %}
        {% else %}
            {% set colspan = 7 %}
            {% if not showCuttingDimensions %}
                {% set colspan = colspan - 2 %}
            {% endif %}
        {% endif %}
        {% for bar in bars %}
            <table id="ladb_cuttingdiagram_group_{{ bar.index }}" data-group-id="{{ group.id }}_{{ bar.index }}" data-bar-index="{{ bar.index }}" class="table table-bordered ladb-cutlist-group ladb-cuttingdiagram-group">
                <thead>
                <tr>
                    <td colspan="{{ colspan }}">
                        <button class="no-print btn btn-default btn-sm ladb-btn-toggle-no-print pull-left"><i class="ladb-opencutlist-icon-eye-close"></i></button>
                        {% if bars|length > 1 %}
                            <div class="no-print btn-group pull-right" role="group">
                                <button class="btn btn-default btn-sm ladb-btn-scrollto-prev-group" {% if loop.first %}disabled{% endif %}><i class="ladb-opencutlist-icon-chevron-left"></i></button>
                                <button class="btn btn-default btn-sm ladb-btn-scrollto-next-group" {% if loop.last %}disabled{% endif %}><i class="ladb-opencutlist-icon-chevron-right"></i></button>
                            </div>
                        {% endif %}
                        <div class="ladb-heading pull-right" style="margin-right: 10px;"><strong>{{ loop.index }} / {{ bars|length }}</strong></div>
                        <div class="ladb-heading"><i class="ladb-opencutlist-icon-bar"></i> {{ group.material_name }} / <strong>{{ group.std_dimension }}</strong> - <i class="ladb-opencutlist-icon-size"></i> <em>{{ bar.length }}</em> - <span style="padding: 2px 5px; border: 1px solid #000; font-size: 80%;">{{ ('tab.cutlist.cuttingdiagram.list.bar_type_'~bar.type)|i18next }}</span></div>
                    </td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td colspan="{{ colspan }}">

                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="-{{ barOutlineWidth + barDimensionOffset + barDimensionFontSize }} -{{ barOutlineWidth + barDimensionOffset + barDimensionFontSize }} {{ bar.px_length + (barOutlineWidth + barDimensionOffset + barDimensionFontSize) * 2 }} {{ bar.px_width + (barOutlineWidth + barDimensionOffset + barDimensionFontSize) * 2 }}" height="{{ bar.px_width + (barOutlineWidth + barDimensionOffset + barDimensionFontSize) * 2 }}" style="max-height: {{ min( 900, bar.px_width + barOutlineWidth * 2 + barDimensionOffset + barDimensionFontSize) }}px">
                            <text class="sheet-dimension" x="{{ bar.px_length / 2 }}" y="-{{ barOutlineWidth + barDimensionOffset }}" font-size="{{ barDimensionFontSize }}px" text-anchor="middle" dominant-baseline="alphabetic">{{ bar.length }}</text>
                            <text class="sheet-dimension" x="-{{ barOutlineWidth + barDimensionOffset }}" y="{{ bar.px_width / 2 }}" font-size="{{ barDimensionFontSize }}px" text-anchor="middle" dominant-baseline="alphabetic" transform="rotate(-90 -{{ barOutlineWidth + barDimensionOffset }},{{ bar.px_width / 2 }})">{{ bar.width }}</text>
                            <g class="sheet" data-toggle="tooltip" data-html="true" title="<span style='font-size: 120%;'>{{ 'tab.cutlist.cuttingdiagram.list.trimming'|i18next }}</span>&nbsp;{{ options.trimming|escape('html') }}">
                                <rect class="sheet-outer" x="-1" y="-1" width="{{ bar.px_length + 2 }}" height="{{ bar.px_width + 2 }}"></rect>
                                <rect class="sheet-inner" x="0" y="0" width="{{ bar.px_length }}" height="{{ bar.px_width }}"></rect>
                            </g>
                            {% set hideCross = bar.leftover.px_length < dimensionFontSize or bar.px_width < dimensionFontSize %}
                            {% set hideDimensions = bar.leftover.px_length < (dimensionFontSize * 2) %}
                            <g class="leftover" data-toggle="tooltip" data-html="true" title="<span style='font-size: 120%;'>{{ 'tab.cutlist.cuttingdiagram.list.leftover'|i18next }}</span><br><i class='ladb-opencutlist-icon-size'></i> {{ bar.leftover.length|escape('html') }}">
                                <rect class="leftover-inner" x="{{ bar.leftover.px_x }}" y="0" width="{{ bar.leftover.px_length }}" height="{{ bar.px_width }}"></rect>
                                {% if not hideCross %}
                                    <line class="leftover-cross" x1="{{ bar.leftover.px_x + bar.leftover.px_length }}" y1="0" x2="{{ bar.leftover.px_x }}" y2="{{ bar.px_width }}"></line>
                                    <line class="leftover-cross" x1="{{ bar.leftover.px_x }}" y1="0" x2="{{ bar.leftover.px_x + bar.leftover.px_length }}" y2="{{ bar.px_width }}"></line>
                                {% endif %}
                                {% if not hideDimensions %}
                                    <text class="leftover-dimension" x="{{ bar.leftover.px_x + bar.leftover.px_length / 2 }}" y="{{ bar.px_width + dimensionOffset }}" font-size="{{ dimensionFontSize }}px" text-anchor="middle" dominant-baseline="hanging">{{ bar.leftover.length }}</text>
                                {% endif %}
                            </g>
                            {% for part in bar.parts|reverse %}
                                {% set hideDimensions = part.px_length < (dimensionFontSize * 2) %}
                                <g class="part" data-part-id="{{ part.id }}" data-toggle="tooltip" data-html="true" title="<span style='font-size: 120%;'>{{ part.name|escape }}</span><br><i class='ladb-opencutlist-icon-size'></i> {{ part.length|escape('html') }}">
                                    <rect class="part-outer" x="{{ part.px_x }}" y="0" width="{{ part.px_length }}" height="{{ bar.px_width }}"></rect>
                                    <rect class="part-inner" x="{{ part.px_x + partOutlineWidth }}" y="{{ partOutlineWidth }}" width="{{ part.px_length - partOutlineWidth * 2 }}" height="{{ bar.px_width - partOutlineWidth * 2 }}"></rect>
                                    {% set numberTextLength = part.number|length %}
                                    <text class="part-number" x="{{ part.px_x + part.px_length / 2 }}" y="{{ bar.px_width / 2 }}" font-size="{{ min(numberFontSize, (part.px_length - dimensionOffset * 2) / numberTextLength, (bar.px_width - dimensionOffset * 2))  }}px" text-anchor="middle" dominant-baseline="central">{{ part.number }}</text>
                                    {% if not hideDimensions %}
                                        <text class="part-dimension" x="{{ part.px_x + part.px_length / 2 }}" y="{{ bar.px_width + dimensionOffset }}" font-size="{{ dimensionFontSize }}px" text-anchor="middle" dominant-baseline="hanging"{% if showCuttingDimensions %} style="fill: red;"{% endif %}>{{ part.length }}</text>
                                    {% endif %}
                                </g>
                            {% endfor %}
                            {% for cut in bar.cuts %}
                                <g class="cut" data-toggle="tooltip" data-html="true" title="<span style='font-size: 120%;'>{{ 'tab.cutlist.cuttingdiagram.list.cut'|i18next }}</span><br><i class='ladb-opencutlist-icon-vertical-cut'></i> {{ cut.x|escape('html') }}<br><i class='ladb-opencutlist-icon-saw'></i> {{ options.saw_kerf|escape('html') }}">
                                    <rect class="cut-outer" x="{{ cut.px_x - cutOutlineWidth }}" y="{{ 0 - cutOutlineWidth }}" width="{{ options.px_saw_kerf + cutOutlineWidth * 2 }}" height="{{ bar.px_width + cutOutlineWidth * 2 }}"></rect>
                                    <rect class="cut-inner" x="{{ cut.px_x }}" y="0" width="{{ options.px_saw_kerf }}" height="{{ bar.px_width }}"></rect>
                                </g>
                            {% endfor %}
                            {% if group.material_grained %}
                                {% include 'core/_grain-direction-arrow.twig' with { 'centerX':bar.px_length / 2, 'centerY':bar.px_width + 20 } %}
                            {% endif %}
                        </svg>

                    </td>
                </tr>
                {% if not options.hide_part_list %}
                    <tr class="ladb-cutlist-heading-row">
                        <td class="text-center" rowspan="2" style="vertical-align: middle !important;" width="5%">{{ 'tab.cutlist.list.number'|i18next }}</td>
                        <td class="text-center" rowspan="2" style="vertical-align: middle !important;">{{ 'tab.cutlist.list.name'|i18next }}</td>
                        <td class="text-center" rowspan="2" style="vertical-align: middle !important;" width="8%">{{ 'tab.cutlist.list.count'|i18next }}</td>
                        {% if showCuttingDimensions %}
                            <td class="text-center" colspan="2">{{ 'tab.cutlist.list.cutting'|i18next }}</td>
                        {% endif %}
                        <td class="text-center" colspan="2">{{ 'tab.cutlist.list.bbox'|i18next }}</td>
                    </tr>
                    <tr class="ladb-cutlist-heading-row">
                        {% if showCuttingDimensions %}
                            <td class="text-center" width="8%">{{ ('tab.cutlist.list.length_short')|i18next }}</td>
                        {% endif %}
                        <td class="text-center" width="8%">{{ ('tab.cutlist.list.length_short')|i18next }}</td>
                    </tr>
                    {% for part in bar.grouped_parts %}
                        <tr class="ladb-cutlist-row ladb-minitools-holder" data-part-id="{{ part.id }}">
                            {% include 'tabs/cutlist/_list-row-col-number.twig' %}
                            <td>
                                <div class="ladb-minitools ladb-minitools-right no-print">
                                    {% if part.edge_count > 0 %}<a href="#" class="ladb-tool-info" data-tab="edges" data-toggle="tooltip" title="{{ 'tab.cutlist.tooltip.has_edges'|i18next({ 'count':part.edge_count }) }}"><i class="ladb-opencutlist-icon-edge-{{ part.edge_pattern }}"></i></a>{% endif %}
                                    <span class="ladb-separator"></span>
                                    <a href="#" class="ladb-btn-highlight-part ladb-click-tool" data-toggle="tooltip" title="{{ 'tab.cutlist.tooltip.highlight_part'|i18next }}"><i class="ladb-opencutlist-icon-magnifier"></i></a>
                                </div>
                                {% if part.edge_count > 0 and part.edge_pattern %}<span class="no-screen pull-right"><i class="ladb-opencutlist-icon-edge-{{ part.edge_pattern }}"></i></span>{% endif %}
                                <span class="ladb-cutlist-part-name">{{ part.name|escape }}</span>
                            </td>
                            <td class="text-center">{{ part.count }}</td>
                            {% if showCuttingDimensions %}
                                {% include 'tabs/cutlist/_list-row-cutting-dimension.twig' with { 'property':'length' } %}
                            {% endif %}
                            <td class="ladb-cutlist-dimension-value">{{ part.length }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                <tr>
                    <td colspan="{{ colspan }}">
                        <span class="ladb-horizontal-left-separator pull-right"><strong>{{ 'tab.cutlist.cuttingdiagram.list.efficiency'|i18next }} : </strong>{{ bar.efficiency|number_format(2, ',', ' ') }}%</span>
                        <span class="pull-right"><strong>{{ 'tab.cutlist.cuttingdiagram.list.total_length_cuts'|i18next }} : </strong>{{ bar.total_length_cuts }}</span>
                        {% if not options.trimming|slice(0, 1) == '0' %}<span class="pull-left"><strong>{{ 'tab.cutlist.cuttingdiagram.list.trimming'|i18next }} : </strong>{{ options.trimming }}</span>{% endif %}
                        <span class="{% if not options.trimming|slice(0, 1) == '0' %}ladb-horizontal-left-separator {% endif %}pull-left">{{ ('tab.cutlist.cuttingdiagram.list.parts')|i18next({ 'count':bar.parts|length }) }}</span>
                    </td>
                </tr>
                </tbody>
            </table>
        {% endfor %}
    </div>
{% endblock %}
