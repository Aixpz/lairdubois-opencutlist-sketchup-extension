{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_cutdiagram' %}
{% set title = 'tab.cutlist.cutdiagram.title'|i18next %}

{% block bodyInner %}
    <div class="form form-horizontal">
        <div class="form-group">
            <label for="ladb_input_kerf" class="control-label col-xs-4">{{ 'tab.cutlist.cutdiagram.option_kerf'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_input_kerf" value="3mm">
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_input_trimming" class="control-label col-xs-4">{{ 'tab.cutlist.cutdiagram.option_trimming'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_input_trimming" value="10mm">
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_input_base_sheet_length" class="control-label col-xs-4">{{ 'tab.cutlist.cutdiagram.option_base_sheet_length'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_input_base_sheet_length" value="2800mm">
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_input_base_sheet_width" class="control-label col-xs-4">{{ 'tab.cutlist.cutdiagram.option_base_sheet_width'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_input_base_sheet_width" value="2070mm">
            </div>
        </div>
        <div class="checkbox">
            <div class="col-xs-offset-4 col-xs-8">
                <label>
                    <input type="checkbox" id="ladb_input_rotatable"> {{ 'tab.cutlist.cutdiagram.option_rotatable'|i18next }}
                </label>
            </div>
        </div>
        <div class="checkbox">
            <div class="col-xs-offset-4 col-xs-8">
                <label>
                    <input type="checkbox" id="ladb_input_stacking"> {{ 'tab.cutlist.cutdiagram.option_stacking'|i18next }}
                </label>
            </div>
        </div>
        <div class="checkbox">
            <div class="col-xs-offset-4 col-xs-8">
                <label>
                    <input type="checkbox" id="ladb_input_stacking_horizontally" checked> {{ 'tab.cutlist.cutdiagram.option_stacking_horizontally'|i18next }}
                </label>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button type="button" class="btn btn-primary" id="ladb_cutlist_cutdiagram">{{ 'tab.cutlist.menu.group_cutdiagram'|i18next }}</button>
{% endblock %}