{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_report' %}
{% set title = 'tab.cutlist.report.title'|i18next %}

{% block headerInner %}
    {{ parent() }}
    {% include 'components/_widget-preset.twig' %}
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li role="presentation"{% if tab == 'general' %} class="active"{% endif %}><a href="#tab_report_options_general" role="tab" data-toggle="tab"><i class="ladb-opencutlist-icon-settings"></i> {{ 'tab.cutlist.report.options_general'|i18next }}</a></li>
    </ul>
{% endblock %}

{% block bodyInner %}
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane{% if tab == 'general' %} active{% endif %}" id="tab_report_options_general">
            <p class="text-center">Ici, bient√¥t des options :P</p>
        </div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button type="button" class="btn btn-primary btn-validate-modal" id="ladb_btn_report">{{ 'tab.cutlist.report.title'|i18next }}</button>
{% endblock %}
