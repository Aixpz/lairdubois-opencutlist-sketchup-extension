                    <option value="part.size">{{ 'tab.cutlist.labels.formula.part_size'|i18next }}</option>
                    <option value="part.length">{{ 'tab.cutlist.labels.formula.part_length'|i18next }}</option>
                    <option value="part.width">{{ 'tab.cutlist.labels.formula.part_width'|i18next }}</option>
                    <option value="part.tags">{{ 'tab.cutlist.labels.formula.part_tags'|i18next }}</option>
                    <option value="part.batch">{{ 'tab.cutlist.labels.formula.part_batch'|i18next }}</option>
