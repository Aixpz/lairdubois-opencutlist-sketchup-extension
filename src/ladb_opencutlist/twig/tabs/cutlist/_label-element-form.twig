                    <option value="start" data-content="<i class='ladb-opencutlist-icon-anchor-start'></i> {{ 'tab.cutlist.labels.option_text_anchor_start'|i18next }}"></option>
                    <option value="middle" data-content="<i class='ladb-opencutlist-icon-anchor-middle'></i> {{ 'tab.cutlist.labels.option_text_anchor_middle'|i18next }}"></option>
                    <option value="end" data-content="<i class='ladb-opencutlist-icon-anchor-end'></i> {{ 'tab.cutlist.labels.option_text_anchor_end'|i18next }}"></option>
                </select>
