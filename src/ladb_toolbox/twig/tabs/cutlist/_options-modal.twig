{% extends 'core/_modal.twig' %}

{% set id = 'ladb_options_modal' %}
{% set title = 'Options' %}

{% block bodyInner %}
    <div class="form">
        <div class="form-group">
            <label for="ladb_input_length_increase">Majoration de longueur</label>
            <div class="input-group">
                <input type="number" class="form-control" id="ladb_input_length_increase">
                <div class="input-group-addon">mm</div>
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_input_width_increase">Majoration de largeur</label>
            <div class="input-group">
                <input type="number" class="form-control" id="ladb_input_width_increase">
                <div class="input-group-addon">mm</div>
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_input_thickness_increase">Majoration d'épaisseur</label>
            <div class="input-group">
                <input type="number" class="form-control" id="ladb_input_thickness_increase">
                <div class="input-group-addon">mm</div>
            </div>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="ladb_input_piece_number_letter"> Utiliser des lettres pour la numérotation de pièce
            </label>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="ladb_input_piece_number_sequence_by_group"> Réinitialiser les numéros de pièce par bloc
            </label>
        </div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
{% endblock %}
