{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_group' %}
{% set title = 'tab.cutlist.edit_group.title'|i18next({ 'name':group.material_name~(group.material_type > 0 ? ' / '~group.std_dimension : '') }) %}

{% block bodyInner %}
    <div class="form form-horizontal">
        <div class="form-group">
            <label for="ladb_cutlist_group_input_part_count" class="control-label col-xs-4">{{ 'tab.cutlist.edit_group.part_count'|i18next }}</label>
            <div class="col-xs-6">
                <input type="text" class="form-control" id="ladb_cutlist_group_input_part_count" value="{{ group.part_count }}" disabled>
            </div>
        </div>
        {% if group.material_type > 0 %}
            <div class="form-group">
                <label for="ladb_cutlist_group_input_std_dimension" class="control-label col-xs-4">{{ 'tab.cutlist.edit_group.std_dimension'|i18next }}</label>
                <div class="col-xs-6">
                    <input type="text" class="form-control" id="ladb_cutlist_group_input_std_dimension" value="{{ group.std_dimension }}" disabled>
                </div>
            </div>
        {% endif %}
        <div class="form-group">
            <label for="ladb_cutlist_group_select_material_name" class="control-label col-xs-4">{{ 'tab.cutlist.edit_group.material'|i18next }}</label>
            <div class="col-xs-6">
                <select class="form-control" id="ladb_cutlist_group_select_material_name">
                    {% include 'tabs/cutlist/_material-usages.twig' %}
                </select>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-10 col-xs-push-1">
            <div class="alert alert-warning">
                <div class="media">
                    <div class="media-left">
                        <i class="ladb-toolbox-icon-warning"></i>
                    </div>
                    <div class="media-body">
                        <p>{{ 'tab.cutlist.edit_group.warning'|i18next }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button type="button" class="btn btn-primary" id="ladb_cutlist_group_update">{{ 'default.validate'|i18next }}</button>
{% endblock %}