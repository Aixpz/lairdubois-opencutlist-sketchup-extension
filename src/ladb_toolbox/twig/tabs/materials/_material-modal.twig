{% extends 'core/_modal.twig' %}

{% set id = 'ladb_modal_material_'~material.id %}
{% set title = material.name %}

{% block bodyInner %}
    <div class="form form-horizontal">
        <div class="form-group">
            <label for="ladb_materials_input_length_increase" class="control-label col-xs-4">Majoration de longueur</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="number" class="form-control" id="ladb_materials_input_length_increase">
                    <div class="input-group-addon">mm</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_materials_input_width_increase" class="control-label col-xs-4">Majoration de largeur</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="number" class="form-control" id="ladb_materials_input_width_increase">
                    <div class="input-group-addon">mm</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_materials_input_thickness_increase" class="control-label col-xs-4">Majoration d'épaisseur</label>
            <div class="col-xs-8">
                <div class="input-group">
                    <input type="number" class="form-control" id="ladb_materials_input_thickness_increase">
                    <div class="input-group-addon">mm</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ladb_materials_input_std_thicknesses" class="control-label col-xs-4">Epaisseurs standards</label>
            <div class="col-xs-8">
                <input type="text" class="form-control" id="ladb_materials_input_std_thicknesses">
                <span class="help-block">Epaisseurs brutes standards exprimées en mm.</span>
            </div>
        </div>
    </div>
{% endblock %}
{% block footerInner %}
    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
{% endblock %}